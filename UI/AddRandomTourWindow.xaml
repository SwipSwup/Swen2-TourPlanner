<Window x:Class="UI.Views.AddRandomTourWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add Random Tour" Height="300" Width="300" WindowStartupLocation="CenterScreen">
    <StackPanel Margin="20">
        <TextBlock Text="Start Location:"/>
        <TextBox x:Name="FromTextBox" Margin="0,5,0,10"/>

        <TextBlock Text="Transport Type:"/>
        <ComboBox x:Name="TransportComboBox" Margin="0,5,0,10">
            <ComboBoxItem>Car</ComboBoxItem>
            <ComboBoxItem>Train</ComboBoxItem>
            <ComboBoxItem>Bus</ComboBoxItem>
            <ComboBoxItem>Flight</ComboBoxItem>
        </ComboBox>

        <Button Content="Add Random Tour" HorizontalAlignment="Right" Width="120" Click="AddRandomTour_Click"/>
    </StackPanel>
</Window>