<Window x:Class="UI.AddTourWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add Tour" Height="400" Width="400">
    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Tour Name:" Grid.Row="0" Grid.Column="0" Margin="0,0,5,5" VerticalAlignment="Center"/>
        <TextBox x:Name="NameTextBox" Grid.Row="0" Grid.Column="1" Margin="0,0,0,5"/>

        <TextBlock Text="Description:" Grid.Row="1" Grid.Column="0" Margin="0,0,5,5" VerticalAlignment="Center"/>
        <TextBox x:Name="DescriptionTextBox" Grid.Row="1" Grid.Column="1" Margin="0,0,0,5"/>

        <TextBlock Text="From:" Grid.Row="2" Grid.Column="0" Margin="0,0,5,5" VerticalAlignment="Center"/>
        <TextBox x:Name="FromTextBox" Grid.Row="2" Grid.Column="1" Margin="0,0,0,5"/>

        <TextBlock Text="To:" Grid.Row="3" Grid.Column="0" Margin="0,0,5,5" VerticalAlignment="Center"/>
        <TextBox x:Name="ToTextBox" Grid.Row="3" Grid.Column="1" Margin="0,0,0,5"/>

        <TextBlock Text="Distance (km):" Grid.Row="4" Grid.Column="0" Margin="0,0,5,5" VerticalAlignment="Center"/>
        <TextBox x:Name="DistanceTextBox" Grid.Row="4" Grid.Column="1" Margin="0,0,0,5"/>

        <TextBlock Text="Estimated Time (hours):" Grid.Row="5" Grid.Column="0" Margin="0,0,5,5" VerticalAlignment="Center"/>
        <TextBox x:Name="TimeTextBox" Grid.Row="5" Grid.Column="1" Margin="0,0,0,5"/>

        <TextBlock Text="Transport Type:" Grid.Row="6" Grid.Column="0" Margin="0,0,5,5" VerticalAlignment="Center"/>
        <ComboBox x:Name="TransportTypeComboBox" Grid.Row="6" Grid.Column="1" Margin="0,0,0,5"/>


        <StackPanel Grid.Row="8" Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button Content="OK" Click="Confirm_Click" Margin="5"/>
            <Button Content="Cancel" Click="Cancel_Click" Margin="5"/>
        </StackPanel>
    </Grid>
</Window>
