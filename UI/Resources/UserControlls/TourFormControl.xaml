<UserControl x:Class="TourPlanner.UserControls.TourFormControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Width="300" Height="200">
    <StackPanel>
        <TextBlock Text="Tour Name:" Margin="0,0,5,5" VerticalAlignment="Center"/>
        <TextBox x:Name="NameTextBox" Margin="0,0,0,5"/>

        <TextBlock Text="Description:" Margin="0,0,5,5" VerticalAlignment="Center"/>
        <TextBox x:Name="DescriptionTextBox" Margin="0,0,0,5"/>

        <TextBlock Text="From:" Margin="0,0,5,5" VerticalAlignment="Center"/>
        <TextBox x:Name="FromTextBox" Margin="0,0,0,5"/>

        <TextBlock Text="To:" Margin="0,0,5,5" VerticalAlignment="Center"/>
        <TextBox x:Name="ToTextBox" Margin="0,0,0,5"/>

        <TextBlock Text="Distance (km):" Margin="0,0,5,5" VerticalAlignment="Center"/>
        <TextBox x:Name="DistanceTextBox" Margin="0,0,0,5"/>

        <TextBlock Text="Estimated Time (hours):" Margin="0,0,5,5" VerticalAlignment="Center"/>
        <TextBox x:Name="TimeTextBox" Margin="0,0,0,5"/>

        <TextBlock Text="Transport Type:" Margin="0,0,5,5" VerticalAlignment="Center"/>
        <ComboBox x:Name="TransportTypeComboBox" Margin="0,0,0,5"/>
    </StackPanel>
</UserControl>